<!DOCTYPE html>
<meta charset="utf-8">
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>

    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>


    <%= render 'layouts/header' %>

    <%= yield %>



    <%= yield :before_scripts %>
    <%= javascript_include_tag "application" %>
    
    <%= yield :scripts %>

  </body>
</html>

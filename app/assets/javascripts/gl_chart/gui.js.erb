function init_gui() {

    gui = new dat.GUI();

    gui_params = {
        mag: 4.5,
        constellations: true,
        messiers: true,
        caldwells: true,
        loc: 0
    }

    gui.add(gui_params, 'mag').min(0.0).max(8.0).step(0.5)
        .name("Magnitude")
        .onChange(function(mag) {
            if(stars != undefined)
                stars.updateLimitMag(gui_params.mag);
        });
    gui.add(gui_params, 'constellations')
        .name("Constellations")
        .onChange(function(value) {
            if(value)
                scene.add(constellation_lines);
            else
                scene.remove(constellation_lines);
        });
    gui.add(gui_params, 'messiers')
        .name("Messier")
        .onChange(function(value) {
            if(value)
                scene.add(messiers);
            else
                scene.remove(messiers);
        });
    gui.add(gui_params, 'caldwells')
        .name("Caldwell")
        .onChange(function(value) {
            if(value)
                scene.add(caldwells);
            else
                scene.remove(caldwells);
        });

    var gloc = gui.addFolder('Location');
    gloc.add(gui_params, 'loc', { 'Uba, MG, Brazil': 0, 'Boston, MA, US': 1 })
        .name("Location")
        .onChange(function(value) {
            if(value==0)
                horizon.set_zenith(-21, -42);
            if(value==1)
                horizon.set_zenith(42, -71);
        });
    gloc.open();
}

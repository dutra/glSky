function Horizon(scene) {

    _this = this;
    _this.horizon = undefined;
    _this.scene = scene;

    this.show = _show;
    this.generate_horizon = _generate_horizon;
    this.set_zenith = _set_zenith;
    function _generate_horizon() {
        var geometry = new THREE.SphereGeometry( 95, 32, 32, 0, Math.PI, 0, Math.PI);
        var material = new THREE.MeshBasicMaterial( {color: 0x002307} );
	material.side = THREE.BackSide;
        //      material.side = THREE.DoubleSide;

        

        _this.horizon = new THREE.Mesh( geometry, material );
        //      _this.horizon.lookAt(new THREE.Vector3(1, 0, 0).negate());
        _this.scene.add(_this.horizon);
    }

    function _set_zenith(lat, lon) {
//	console.log(lon);
        _this.horizon.lookAt(latLongToVector3(lat, lon, 1).negate());

    }
    function _show(value) {
	if(value)
	    _this.scene.add(_this.horizon);
	else
	    _this.scene.remove(_this.horizon);
    }
    

}
